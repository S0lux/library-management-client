<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Avalonia_DependencyInjection.ViewModels"
        xmlns:ic="using:FluentIcons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="600"
        x:DataType="vm:LoginViewModel"
        x:Class="Avalonia_DependencyInjection.Views.LoginView">
    
    <Grid Background="#4667df" ColumnDefinitions="2* *" RowDefinitions="* auto">
        
        <!-- Title bar -->
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              VerticalAlignment="Top"
              Background="Transparent"
              ZIndex="1"
              PointerPressed="InputElement_OnPointerPressed">
            
            <!-- Close application button -->
            <Button Command="{Binding CloseWindowCommand}" 
                    Margin="0 5 5 0"
                    HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image Source="/Assets/Icons/exit_button.png"
                               Width="20" Margin="5"></Image>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        
        <!-- Left panel image -->
        <Image Grid.Row="0" Grid.Column="0" Source="/Assets/LoginScreen/Thumbnail.png" MaxWidth="500" />
        
        <!-- Right panel grid -->
        <Grid Grid.Row="0" Grid.Column="1" Background="White" RowDefinitions="Auto *">
            <!-- School logo and text -->
            <Grid Grid.Row="0" HorizontalAlignment="Left" ColumnDefinitions="auto *" VerticalAlignment="Center">
                <Image Grid.Column="0" Source="/Assets/school-logo.png" MaxWidth="60" Margin="50 45 10 0" />
                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center" 
                           FontWeight="Black" Foreground="RoyalBlue"
                           Margin="0 45 0 0"
                           FontSize="20">
                    UIT
                </TextBlock>
            </Grid>
            
            <!-- Login -->
            <Grid Grid.Row="1" Margin="50 75 50 0" RowDefinitions="Auto Auto *">
                <!-- Title  -->
                <TextBlock Grid.Row="0" FontWeight="Black"
                           Foreground="RoyalBlue"
                           FontSize="25">
                    Login
                </TextBlock>
                
                <!-- Description -->
                <TextBlock Grid.Row="1" FontWeight="Black"
                           Foreground="Gray"
                           FontSize="10"
                           Margin="0 5 0 0">
                    Please login with the account provided by your administrator
                </TextBlock>
                
                <StackPanel Grid.Row="2">
                    <!-- Username input -->
                    <TextBox Margin="0 20 0 0"
                             Classes="Username"
                             Watermark="Username"
                             Text="{Binding Username}"
                             IsEnabled="{Binding !IsBusy}">
                    </TextBox>
                    
                    <!-- Password input -->
                    <TextBox Margin="0 20 0 0"
                             Classes="Password"
                             Watermark="Password"
                             PasswordChar="*"
                             Text="{Binding Password}"
                             IsEnabled="{Binding !IsBusy}">
                    </TextBox>
                    
                    <!-- Remember checkbox -->
                    <CheckBox Margin="0 20 0 0"
                              Classes="RememberBox"
                              IsChecked="{Binding IsRemember}"
                              IsEnabled="{Binding !IsBusy}">
                        Remember me for 3 days
                    </CheckBox>
                    
                    <!-- Login button -->
                    <Grid HorizontalAlignment="Center"
                          Margin="0 40 0 0">
                        <Button Background="RoyalBlue" 
                                Foreground="White" 
                                FontWeight="SemiBold" 
                                Padding="25 8"
                                Command="{Binding LoginCommand}"
                                IsEnabled="{Binding !IsBusy}">
                            Login
                        </Button>
                    </Grid>
                    
                    <!-- Alert box -->
                    <Border Margin="0 20 0 0"
                            Background="#f10505"
                            CornerRadius="5"
                            Padding="10"
                            VerticalAlignment="Center"
                            BorderBrush="#be0503"
                            BorderThickness="3"
                            IsVisible="{Binding HasError}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ic:SymbolIcon Symbol="Warning"
                                           Foreground="White" 
                                           FontSize="25"
                                           Margin="0 0 5 0"/>
                            <Label Foreground="White" 
                                   VerticalAlignment="Center" 
                                   Content="{Binding ErrorMessage}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
