<Window
    x:Class="Avalonia_DependencyInjection.Views.BookInfoView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:Avalonia_DependencyInjection.ViewModels"
    Title="BookInfoView"
    Width="550"
    Height="300"
    d:DesignHeight="450"
    d:DesignWidth="500"
    x:DataType="vm:BookInfoViewModel"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="0"
    ExtendClientAreaToDecorationsHint="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto *">
        <Border
            Grid.Row="0"
            Background="Transparent"
            DockPanel.Dock="Top"
            PointerPressed="TitleBarContainer_OnPointerPressed">
            <Grid HorizontalAlignment="Right">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Classes="Close"
                    Command="{Binding CancelCommand}"
                    PointerEntered="Close_OnPointerEntered"
                    PointerExited="Close_OnPointerExited">
                    <Svg
                        Width="15"
                        Height="15"
                        Path="{Binding IconPathExit}" />
                </Button>
            </Grid>
        </Border>

        <Grid
            Grid.Row="1"
            Margin="30,25"
            ColumnDefinitions="0.5* *">
            <Grid
                Grid.Column="0"
                Background="White"
                RowDefinitions="* auto">
                <asyncImageLoader:AdvancedImage
                    Name="CoverLoader"
                    Grid.Row="0"
                    Source="{Binding ImageUrl}"
                    Stretch="Uniform" />
                <Grid Grid.Row="0">
                    <Grid
                        Background="Black"
                        IsVisible="{Binding ElementName=CoverLoader, Path=IsLoading}"
                        Opacity="0.1" />
                </Grid>
            </Grid>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel Margin="25,0,0,0" Spacing="5">
                    <Border
                        Padding="10,10"
                        Background="White"
                        CornerRadius="5">
                        <StackPanel Spacing="5">
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="RoyalBlue"
                                Text="{Binding Book.Title}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="{Binding Book.Author, StringFormat=by {0}}" />
                            <TextBlock
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="{Binding Book.ISBN13, StringFormat=ISBN13: {0}}" />
                            <TextBlock
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="{Binding Book.Shelf, StringFormat=Shelf: {0}}" />
                        </StackPanel>

                    </Border>

                    <Border
                        Margin="0,15,0,0"
                        Padding="10,10"
                        Background="White"
                        CornerRadius="5">
                        <Grid ColumnDefinitions="* .5* * .5*" RowDefinitions="* *">
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="Available:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                FontWeight="DemiBold"
                                Foreground="LimeGreen"
                                Text="{Binding Normal}" />

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="2"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="Borrowed:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="3"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Foreground="Orange"
                                Text="{Binding Borrowed}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,5,0,0"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="Damaged:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,5,0,0"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Foreground="red"
                                Text="{Binding Damaged}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="0,5,0,0"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Text="Lost:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="3"
                                Margin="0,5,0,0"
                                FontSize="15"
                                FontWeight="DemiBold"
                                Foreground="gray"
                                Text="{Binding Lost}" />
                        </Grid>
                    </Border>

                    <Button
                        Margin="0,10,0,0"
                        Background="RoyalBlue"
                        Command="{Binding UpdateCommand}"
                        FontSize="15"
                        FontWeight="DemiBold"
                        Foreground="White">
                        Update quantity
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ui|FABorder#Root">
                                <Setter Property="Background" Value="#414ee1" />
                            </Style>
                            <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </ScrollViewer>

        </Grid>


    </Grid>
</Window>
