<Window
    x:Class="Avalonia_DependencyInjection.Views.EmployeeRegisterFormView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="clr-namespace:Avalonia_DependencyInjection.ViewModels"
    Title="EmployeeRegisterFormView"
    Width="550"
    Height="600"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:EmployeeRegisterFormViewModel"
    Closing="Window_OnClosing"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="0"
    ExtendClientAreaToDecorationsHint="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="FontWeight" Value="Normal" />
        </Style>
        <Style Selector="Label">
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="RoyalBlue" />
        </Style>
        <Style Selector="Button.sub_can:pointerover /template/ ui|FABorder#Root">
            <Setter Property="Background" Value="#414ee1" />
        </Style>
        <Style Selector="Button.sub_can:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.CollapseAlert:pointerover /template/ ui|FABorder#Root">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="Button.Close:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Red" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="auto *">
        <Border
            Grid.Row="0"
            Background="Transparent"
            DockPanel.Dock="Top"
            PointerPressed="TitleBarContainer_OnPointerPressed">
            <Grid HorizontalAlignment="Right">
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Classes="Close"
                    Command="{Binding CancelCommand}"
                    PointerEntered="Close_OnPointerEntered"
                    PointerExited="Close_OnPointerExited">
                    <Svg
                        Width="15"
                        Height="15"
                        Path="{Binding IconPathExit}" />
                </Button>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <Grid
                Name="MainGrid"
                Margin="30,0,30,0"
                RowDefinitions="auto *">
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="5">
                    <Svg
                        Width="30"
                        Height="30"
                        Path="{Binding Ico}" />
                    <Label Content="{Binding Title}" FontSize="30" />
                </StackPanel>


                <!--  Narrow View  -->
                <Grid
                    x:Name="NarrowView"
                    Grid.Row="1"
                    Margin="0,15,0,0">
                    <StackPanel Spacing="20">

                        <!--  first name_narrow view  -->
                        <DockPanel>
                            <Label DockPanel.Dock="Top">
                                Fullname
                            </Label>
                            <TextBox Text="{Binding InputedEmployee.Name, Mode=TwoWay}" />
                        </DockPanel>

                        <DockPanel>
                            <Label DockPanel.Dock="Top">
                                Email
                            </Label>
                            <TextBox Text="{Binding InputedEmployee.Email, Mode=TwoWay}" />
                        </DockPanel>

                        <Grid ColumnDefinitions="* *">
                            <!--  phone number_narrow view  -->
                            <DockPanel Grid.Column="0" Margin="0,0,5,0">
                                <Label DockPanel.Dock="Top">
                                    Phone number
                                </Label>
                                <TextBox VerticalAlignment="Top">
                                    <TextBox.Text>
                                        <Binding Path="InputedEmployee.PhoneNumber" />
                                    </TextBox.Text>
                                </TextBox>
                            </DockPanel>

                            <!--  ID_narrow view  -->
                            <DockPanel Grid.Column="1" Margin="5,0,0,0">
                                <Label DockPanel.Dock="Top">
                                    Citizen ID
                                </Label>
                                <TextBox VerticalAlignment="Top" Text="{Binding InputedEmployee.CitizenID}" />
                            </DockPanel>
                        </Grid>


                        <Grid ColumnDefinitions="* *">
                            <!--  Bdate_narrow view  -->
                            <DockPanel Grid.Column="1" Margin="5,0,0,0">
                                <Label DockPanel.Dock="Top">
                                    Birthdate
                                </Label>
                                <CalendarDatePicker
                                    HorizontalAlignment="Stretch"
                                    CustomDateFormatString="dd/MM/yyyy"
                                    SelectedDate="{Binding InputedEmployee.DateOfBirth}"
                                    SelectedDateFormat="Custom" />
                            </DockPanel>

                            <!--  gender_narrow view  -->
                            <DockPanel Grid.Column="0" Margin="0,0,5,0">
                                <Label DockPanel.Dock="Top">
                                    Gender
                                </Label>
                                <ComboBox
                                    HorizontalAlignment="Stretch"
                                    Classes="MemberListComboBox"
                                    ItemsSource="{Binding Genders}"
                                    SelectedItem="{Binding InputedEmployee.Gender, Converter={StaticResource GenderConverter}}" />
                            </DockPanel>
                        </Grid>


                        <!--  address_narrow view  -->
                        <DockPanel>
                            <Label DockPanel.Dock="Top">
                                Full address
                            </Label>
                            <TextBox Text="{Binding InputedEmployee.Address}" />
                        </DockPanel>

                        <DockPanel>
                            <Label DockPanel.Dock="Top">
                                Username
                            </Label>
                            <TextBox Text="{Binding InputedEmployee.Account.Username, Mode=TwoWay}" />
                        </DockPanel>

                        <DockPanel>
                            <Label DockPanel.Dock="Top">
                                Password
                            </Label>
                            <TextBox
                                Classes="revealPasswordButton"
                                PasswordChar="â€¢"
                                Text="{Binding InputedEmployee.Account.Password, Mode=TwoWay}" />
                        </DockPanel>

                        <!--  submit/cancel button_narrow view  -->
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <DockPanel>
                                <Button
                                    Padding="15,5"
                                    Background="RoyalBlue"
                                    Classes="sub_can"
                                    Command="{Binding SubmitCommand}"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="White">
                                    Submit
                                </Button>
                            </DockPanel>

                            <DockPanel>
                                <Button
                                    Padding="15,5"
                                    Background="RoyalBlue"
                                    Classes="sub_can"
                                    Command="{Binding CancelCommand}"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="White">
                                    Cancel
                                </Button>
                            </DockPanel>
                        </StackPanel>

                        <!--  Alert box  -->
                        <Border
                            VerticalAlignment="Center"
                            Background="#f10505"
                            BorderBrush="#be0503"
                            BorderThickness="2"
                            CornerRadius="5"
                            IsVisible="{Binding HasError}">
                            <Grid ColumnDefinitions="* auto">
                                <Grid
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    ColumnDefinitions="auto *"
                                    RowDefinitions="auto *">
                                    <ic:SymbolIcon
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="5,5,5,0"
                                        FontSize="25"
                                        Foreground="White"
                                        Symbol="ErrorCircle" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Content="Error"
                                        Foreground="White" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Content="{Binding ErrorMessage}"
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </Grid>
                                <Button
                                    Grid.Column="1"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Classes="CollapseAlert"
                                    Command="{Binding AlertBoxOffCommand}">
                                    <Svg
                                        Width="10"
                                        Height="15"
                                        Path="/Assets/SVGs/xmark-white.svg" />
                                </Button>
                            </Grid>

                        </Border>


                    </StackPanel>
                    <Grid.Styles>
                        <Style Selector="Grid.Hidden">
                            <Setter Property="IsVisible" Value="False" />
                        </Style>
                        <Style Selector="Grid.Visible">
                            <Setter Property="IsVisible" Value="True" />
                        </Style>
                    </Grid.Styles>

