<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ir="clr-namespace:Avalonia.Xaml.Interactions.Responsive;assembly=Avalonia.Xaml.Interactions"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="900"
             x:Class="Avalonia_DependencyInjection.Views.HomeView">
    
    <Grid Name="MainGrid" Margin="30 0 0 0" RowDefinitions="Auto *">
        
        <Label Grid.Row="0" 
               FontSize="30" 
               FontWeight="DemiBold"
               Margin="0 0 0 20">
            Home
        </Label>
        
        <Grid Grid.Row="1" ColumnDefinitions="* Auto">
            <Border Grid.Column="0"
                    Name="UserInfo"
                    Background="White" 
                    Margin="0 0 30 0" 
                    Height="150" 
                    MinWidth="750"
                    VerticalAlignment="Top"
                    CornerRadius="5"
                    ClipToBounds="True"
                    Classes="Clip">
                
                <Border.Styles>
                    <Style Selector="Border.Clip">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>
                </Border.Styles>
                
                <Interaction.Behaviors>
                    <AdaptiveBehavior SourceControl="MainGrid"
                                      TargetControl="UserInfo">
                        <AdaptiveClassSetter MinWidth="0"
                                             MinWidthOperator="GreaterThanOrEqual"
                                             MaxWidth="750"
                                             MaxWidthOperator="LessThan"
                                             ClassName="Clip" />
                    </AdaptiveBehavior>
                </Interaction.Behaviors>
                
                <Grid RowDefinitions="Auto Auto">
                    <Grid Grid.Row="0" ColumnDefinitions="Auto *" Margin="0 0 0 20">
                        <Border Grid.Column="0" Background="RoyalBlue" 
                                CornerRadius="5"
                                Height="150"
                                Padding="10"
                                HorizontalAlignment="Left"
                                MinWidth="300">
                            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" ColumnDefinitions="Auto Auto">
                                <Image Grid.Column="0" Source="/Assets/Character.png" Margin="0 0 5 0"/>
                                <StackPanel Grid.Column="1">
                                    <Label Content="Trần Phước Lộc"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="20"/>
                                    <Label Content="20 years old"
                                           Foreground="White"
                                           FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <Border Grid.Column="1"
                                Padding="10">
                            <Grid ColumnDefinitions="* * *" RowDefinitions="* *">
                                <Panel Grid.Row="0" Grid.Column="0">
                                    <Label Foreground="LightSlateGray" FontWeight="Medium">Phone Number</Label>
                                    <Label Margin="0 20 0 0">(+84) 0972339932</Label>
                                </Panel>
                                <Panel Grid.Row="0" Grid.Column="1">
                                    <Label Foreground="LightSlateGray" FontWeight="Medium">Email</Label>
                                    <Label Margin="0 20 0 0">22520797@gm.uit.edu.vn</Label>
                                </Panel>
                                <Panel Grid.Row="0" Grid.Column="2">
                                    <Label Foreground="LightSlateGray" FontWeight="Medium">CCCD</Label>
                                    <Label Margin="0 20 0 0">08920400****</Label>
                                </Panel>
                                
                                <Panel Grid.Row="1" Grid.Column="0">
                                    <Label Foreground="LightSlateGray" FontWeight="Medium">Birthday</Label>
                                    <Label Margin="0 20 0 0">27/11/2004</Label>
                                </Panel>
                                <Panel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                                    <Label Foreground="LightSlateGray" FontWeight="Medium">Address</Label>
                                    <Label Margin="0 20 0 0">KTX khu b, Đông Hòa, Bình Dương</Label>
                                </Panel>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!--<Grid Grid.Row="1" Height="150">
                        <Border Background="White" CornerRadius="5">
                            <Grid ColumnDefinitions="* * * *">
                                <Border Grid.Column="0" Background="ForestGreen"
                                        Margin="15"
                                        CornerRadius="5"
                                        Padding="20">
                                    <DockPanel>
                                        <Svg Path="/Assets/SVGs/books.svg"
                                             VerticalAlignment="Top" 
                                             HorizontalAlignment="Right" 
                                             Height="40"
                                             DockPanel.Dock="Right" />
                                        <StackPanel VerticalAlignment="Bottom">
                                            <Panel>
                                            <Label FontSize="30"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="0 0 0 20">
                                                0
                                            </Label>
                                                
                                            <Label FontSize="25"
                                                   FontWeight="Bold"
                                                   Foreground="White">
                                                Books
                                            </Label>
                                            </Panel>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>-->
                </Grid>
            </Border>
            
            <Border Grid.Column="1" Name="CalendarBorder" Background="White" CornerRadius="5">
                
                <Border.Styles>
                    <Style Selector="Border.Hidden">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                </Border.Styles>
                
                <Interaction.Behaviors>
                    <AdaptiveBehavior SourceControl="MainGrid"
                                      TargetControl="CalendarBorder">
                        <AdaptiveClassSetter MinWidth="0"
                                             MinWidthOperator="GreaterThanOrEqual"
                                             MaxWidth="1200"
                                             MaxWidthOperator="LessThan"
                                             ClassName="Hidden" />
                    </AdaptiveBehavior>
                </Interaction.Behaviors>
                
                <Calendar VerticalAlignment="Top" BorderThickness="0" />
            </Border>
        </Grid>
        
    </Grid>
</UserControl>
