<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Avalonia_DependencyInjection.Views.MemberListView"
    x:DataType="vm:MemberListViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:UI="using:FluentAvalonia.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="https://github.com/avaloniaui"
    xmlns:vm="using:Avalonia_DependencyInjection.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Styles>
        <Style Selector="Button:pointerover /template/ UI|FABorder#Root">
            <Setter Property="Background" Value="#217f4c" />
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Styles>
    <Grid Margin="30,0,30,30" Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            DockPanel.Dock="Top"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            VerticalAlignment="Top">
            <Svg
                Height="30"
                Path="/Assets/SVGs/users_black.svg"
                Width="30" />
            <Label Classes="MemberListLabel">
                Member List
            </Label>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                DockPanel.Dock="Left"
                Grid.Column="0"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBox
                    Height="3"
                    Watermark="Filter Key"
                    Width="120" />
                <ui:ComboBox Margin="10,0,0,0" PlaceholderText="Filter By" />
            </StackPanel>
            <Button
                Background="#31bc70"
                Command="{Binding AddCommand}"
                DockPanel.Dock="Right"
                Grid.Column="2"
                Padding="8,3,4,3">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Svg
                        Height="14"
                        Path="/Assets/SVGs/user-plus.svg"
                        Width="14" />
                    <Label
                        Content="ADD"
                        FontWeight="DemiBold"
                        Foreground="White" />
                </StackPanel>
            </Button>
        </Grid>

        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="Gray"
            BorderThickness="0"
            Grid.Row="2"
            GridLinesVisibility="Horizontal"
            IsReadOnly="True"
            ItemsSource="{Binding memberList}"
            Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding MemberID}"
                    Header="ID"
                    Width="auto" />
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="CUSTOMER"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding PhoneNumber}"
                    Header="PHONE"
                    Width="auto" />
                <DataGridTextColumn
                    Binding="{Binding Gender, Converter={StaticResource GenderConverter}}"
                    Header="GENDER"
                    Width="auto" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button HorizontalContentAlignment="Center" Margin="0,0,8,0">
                                    <Svg
                                        Height="13"
                                        Path="/Assets/SVGs/pen-to-square.svg"
                                        Width="13" />
                                </Button>
                                <Button HorizontalContentAlignment="Center" Margin="0,0,13,0">
                                    <Svg
                                        Height="13"
                                        Path="/Assets/SVGs/trash-can.svg"
                                        Width="13" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
