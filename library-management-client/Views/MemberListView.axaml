<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Avalonia_DependencyInjection.Views.MemberListView"
    x:DataType="vm:MemberListViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="https://github.com/avaloniaui"
    xmlns:vm="using:Avalonia_DependencyInjection.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30,0,30,30" Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            DockPanel.Dock="Top"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            VerticalAlignment="Top">
            <Svg
                Height="30"
                Path="/Assets/SVGs/users_black.svg"
                Width="30" />
            <Label Classes="MemberListLabel">
                Member List
            </Label>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                DockPanel.Dock="Left"
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBox
                    Height="3"
                    Watermark="Filter Key"
                    Width="120" />
                <ui:ComboBox Margin="10,0,0,0" PlaceholderText="Filter By" />
            </StackPanel>
            <Button
                Command="{Binding AddCommand}"
                Content="ADD"
                DockPanel.Dock="Right"
                Grid.Column="2" />
        </Grid>

        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="Gray"
            BorderThickness="0"
            Grid.Row="2"
            GridLinesVisibility="Horizontal"
            IsReadOnly="True"
            ItemsSource="{Binding memberList}"
            Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding MemberID}"
                    Header="ID"
                    Width="auto" />
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="CUSTOMER"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding PhoneNumber}"
                    Header="PHONE"
                    Width="auto" />
                <DataGridTextColumn
                    Binding="{Binding Gender, Converter={StaticResource GenderConverter}}"
                    Header="GENDER"
                    Width="auto" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button>something</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
