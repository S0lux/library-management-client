<UserControl
    x:Class="Avalonia_DependencyInjection.Views.AddByISBNView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Avalonia_DependencyInjection.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:AddByISBNViewModel"
    mc:Ignorable="d">
    <Grid Margin="0,20,0,0">
        <Border Grid.Row="0" Margin="50,50,50,75">
            <Grid ColumnDefinitions="0.5* *">
                <Border
                    Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5">
                    <TextBlock>image goes here</TextBlock>
                </Border>

                <Grid
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    RowDefinitions="auto Auto auto auto auto auto">
                    <TextBlock
                        Grid.Row="0"
                        FontSize="30"
                        FontWeight="DemiBold"
                        Foreground="RoyalBlue"
                        Text="{Binding Book.Title}"
                        TextWrapping="Wrap">
                    </TextBlock>
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock FontSize="20">by</TextBlock>
                        <TextBlock
                            FontSize="20"
                            FontWeight="DemiBold"
                            Text="{Binding Book.Author}">
                        </TextBlock>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock FontSize="20">Released on:</TextBlock>
                        <TextBlock
                            FontSize="20"
                            FontWeight="DemiBold"
                            Text="{Binding ReleaseDate}">
                        </TextBlock>
                    </StackPanel>


                    <StackPanel
                        Grid.Row="4"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock FontSize="20">ISBN13:</TextBlock>
                        <TextBlock
                            FontSize="20"
                            FontWeight="DemiBold"
                            Text="{Binding Book.ISBN13}">
                        </TextBlock>
                    </StackPanel>

                    <Button
                        Grid.Row="5"
                        Height="40"
                        Margin="0,20,0,0"
                        Background="#31bc70"
                        Classes="MemberListAddButton"
                        Command="{Binding AddBookCommand}"
                        DockPanel.Dock="Right">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Svg
                                Width="14"
                                Height="14"
                                Path="/Assets/SVGs/user-plus.svg" />
                            <Label
                                Content="CONFIRM"
                                FontWeight="DemiBold"
                                Foreground="White" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>



    </Grid>
</UserControl>